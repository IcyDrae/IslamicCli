<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>islamic</AssemblyName>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>IslamicCli</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="data/dhikr.json" />
    <EmbeddedResource Include="data/quran_en.json" />
    <EmbeddedResource Include="data/adhan.mp3" />
    <EmbeddedResource Include="data/99names.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Windows.Extensions" Version="10.0.1" />
  </ItemGroup>

</Project>
