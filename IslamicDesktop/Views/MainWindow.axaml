<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="IslamicDesktop.Views.MainWindow"
        WindowState="Maximized"
        Title="Islamic Desktop">

  <DockPanel>

    <!-- Side Menu -->
    <StackPanel DockPanel.Dock="Left"
                Width="200"
                Background="#EEE"
                Spacing="10"
                Margin="5">

      <Button Content="Prayer Times" Click="ShowPrayerTimes"/>
      <Button Content="Next Prayer" Click="ShowNextPrayer"/>
      <Button Content="Dhikr" Click="ShowDhikr"/>
      <Button Content="Random Dhikr" Click="ShowRandomDhikr"/>
      <Button Content="Quran" Click="ShowQuran"/>
      <Button Content="Hijri Calendar" Click="ShowHijri"/>
      <Button Content="Fasting Days" Click="ShowFastingDays"/>
      <Button Content="99 Names of Allah" Click="Show99Names"/>

    </StackPanel>

    <!-- Main Content Area -->
    <ScrollViewer>
        <ContentControl x:Name="MainContent" Margin="10"/>
    </ScrollViewer>

  </DockPanel>
</Window>
